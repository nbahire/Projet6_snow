{% extends 'base.html.twig' %}

{% block title %}SnowTrick : Pour les passionnés de la glisse{% endblock %}

{% block body %}
    <div class="w-full bg-center bg-cover " style="background-image:url({{asset('images/cover-trick.jpg')}}); height: 90vh;">
        <div class="example-wrapper">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">{{ message }}</div>
            {% endfor %}
        </div>

        <div class="container max-w-4xl mx-auto pt-16 md:pt-32 text-center break-normal">
            <!--Title-->
            <p class="text-white mt-6 font-extra bold text-3xl md:text-5xl">
                 Snowtrick
            </p>
            <p class="text-xl md:text-2xl mt-8 text-rose-500">Bienvenue sur l'espace preferé des passionnés de la glisse</p>
        </div>
    </div>
    <div class="-mt-32 mb-4 mr-2 text-3xl md:text-5xl text-center flex justify-end">
        <a href="#all">
            <i class="fa-solid fa-arrow-down"></i>
        </a>
    </div>

    <div id="all" class="container my-12 py-12 px-4 md:px-0 mx-auto rounded">
        <div class="mx-0 sm:mx-6 mt-8" id="content">
        </div>
        <div class="w-full p-6 flex justify-center">
            <button type="submit" class="load-more group relative flex md:w-1/5 justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Afficher plus
            </button>
        </div>
    </div>

    {% if tricks %}
        <input  class="page" type="hidden" name="page" value="{{ tricks.page }}">
        <input class="limit" type="hidden" name="limit" value="{{ tricks.pages }}">
    {% endif %}
    <div class="my-12  mr-2 text-3xl md:text-5xl text-center flex justify-end">
        <a href="#all">
            <i class="fa-solid fa-arrow-up"></i>
        </a>
    </div>

{% endblock %}
