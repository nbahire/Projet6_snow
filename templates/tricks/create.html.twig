{% extends 'base.html.twig' %}

{% block title %}Créer une figure - SnowTrick : Pour les passionnés de la glisse{% endblock %}
{% block body %}
    {{ form_start(trickCreateForm) }}
    <div class=" flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class=" bg-gray-200 p-6 w-full max-w-6 space-y-8 rounded border-2 border-gray-200">
            <div>
                <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
                <h2 class="mt-6 text-center text-2xl font-bold tracking-tight text-gray-900">Ajouter un mouvement</h2>
            </div>
            <input type="hidden" name="remember" value="true">
            <div class="-space-y-px rounded-md">
                <div>
                    {{ form_row(trickCreateForm.category) }}
                </div>
                <div>
                    {{ form_row(trickCreateForm.title) }}
                </div>
                <div>
                    {{ form_row(trickCreateForm.content) }}
                </div>
                <div>
                    {{ form_row(trickCreateForm.video) }}
                </div>
                <div>
                    {{ form_row(trickCreateForm.images) }}
                </div>

            </div>
            <div>
                <button type="submit" class="group relative flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Ajouter le trick
                </button>
            </div>
        </div>
    </div>
    {{ form_end(trickCreateForm) }}
{% endblock %}
